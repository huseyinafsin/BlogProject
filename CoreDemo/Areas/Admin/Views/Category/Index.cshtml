@using EntityLayer.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori Listesi</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th> 
        <th>Kategori Adi</th>
        <th>Pasif Yap</th>
        <th>Aktif Yap</th>
        <th>Düzenler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/CategoryDelete?id=@item.CategoryID" id="deleteBtn"
                  onclick="return confirm('Silmek istediğinize emin misiniz?');" class="btn btn-danger">Pasif Yap</a></td>
            <td><a href="#" class="btn btn-warning ">Aktif Yap</a></td>
            <td><a href="#" class="btn btn-success">Düzenle</a></td>
        </tr>
    }
</table>
<br />
<br />
<a href="/Admin/Category/AddCategory" class="btn btn-primary">Yeni Kategory</a>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))
