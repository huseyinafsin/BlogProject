@model List<EntityLayer.Concrete.Comment>
    
<div class="comment-top">
    <h2>Yorumlar</h2>
    @if (Model.Count == 0)
    {
        <div class="alert alert-primary" role="alert">
            Henüz bir yorum yapılmadı, ilk yorumu siz yapın!
        </div>
    }
    <br />
    @foreach (var item in Model)
    {
        <div class="media">
            <img src="/CoreBlogTema/images/t1.png" alt="" width="45" height="45" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName</h5>
                <br />

                <div class="alert alert-secondary" role="alert">
                    @item.CommentContent
                </div>
                <small class="comment comment">@item.CommentDate</small>
            </div>
        </div>
    }

</div>
