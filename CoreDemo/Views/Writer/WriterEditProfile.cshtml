@model EntityLayer.Concrete.Writer
@{
	ViewData["Title"] = "WriterEditProfile";
	Layout = "~/Views/Shared/WriterLayout.cshtml";
}


@using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
{
	<div class="col-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
				<br />
				<input type="hidden" class="form-control" asp-for="WriterID" />
				<p class="card-description"> Basic form elements </p>
				<form class="forms-sample">
					<div class="form-group">
						<label for="exampleInputName1">Yazar Ad Soyad</label>
						<input type="text" asp-for="WriterName" class="form-control" id="exampleInputName1" placeholder="Name">
					</div>
					<div class="form-group">
						<label for="exampleInputEmail3">Email Adresi</label>
						<input type="email" asp-for="WriterMail" class="form-control" id="exampleInputEmail3" placeholder="Email">
					</div>

					<div class="form-group">
						<span id="message" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label for="exampleInputPassword4">Şifre</label>
						<input type="password" id="password" asp-for="WriterPassword" class="form-control" id="exampleInputPassword4" placeholder="Password">
					</div>
					<div class="form-group">
						<label for="exampleInputPassword4">Şifre</label>
						<input type="password" id="confirm_password" name="confirm_password" class="form-control" id="exampleInputPassword4" placeholder="Password">
					</div>
					<div class="form-group">
						<label>Yazar Görsel</label>
						<input type="file" name="img[]" class="file-upload-default">
						<div class="input-group col-xs-12">
							<input type="text" class="form-control file-upload-info" disabled placeholder="Resim Seç">
							<span class="input-group-append">
								<button class="file-upload-browse btn btn-gradient-primary" type="button">Yükle</button>
							</span>
						</div>
					</div>
					<div class="form-group">
						<label for="exampleTextarea1">Yazar Hakkında</label>
						<textarea class="form-control" rows="10" cols="3" asp-for="WriterAbout" id="exampleTextarea1" rows="4"></textarea>
					</div>
					<button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
					<button class="btn btn-light">İptal</button>
				</form>

			</div>
		</div>
	</div>



}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script>
	$('#WriterPassword', '#WriterPasswordConfirm').on('keyup', function () {
		if ($('#WriterPassword').val() == $('#WriterPasswordConfirm').val()) {
			$('#message').html('Matching').css('color', 'green');
		}
		else
			$('#message').html('Not Matching').css('color', 'red');
	})
</script>