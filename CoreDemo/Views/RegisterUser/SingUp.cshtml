@model UserSignUpViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/inspinia/css/bootstrap.min.css" rel="stylesheet">
    <link href="font-awesome/~/inspinia/css/font-awesome.css" rel="stylesheet">
    <link href="~/inspinia/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/inspinia/css/animate.css" rel="stylesheet">
    <link href="~/inspinia/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">Core Demo 5.0</h1>

            </div>
            <h3>Register to IN+</h3>
            <p>Yeni Hesap Oluşturun</p>
            <form class="m-t" role="form" method="post" asp-action="SingUp">
                <div class="form-group">
                    <span asp-validation-for="@Model.NameSurname" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.NameSurname" placeholder="Ad ve Soyadınız" >
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    <input type="email" class="form-control" asp-for="@Model.Email" placeholder="Email" >
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.Username" placeholder="Kullanıcıadı">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Şifre" >
                </div>
                
                <div class="form-group">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" placeholder="Şifre Tekrar" >
                </div>

                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small>Zaten Hesabım var</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Register/Login">Login</a>
            </form>
            <p class="m-t"> <small>Asp.Core 5.0  &copy; 2014</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/inspinia/js/jquery-3.1.1.min.js"></script>
    <script src="~/inspinia/js/popper.min.js"></script>
    <script src="~/inspinia/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/inspinia/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>
